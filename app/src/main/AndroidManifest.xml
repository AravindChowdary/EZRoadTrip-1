<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="easyroadtrip.com.ezroadtrip">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:name=".Presentation.application.EZApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Presentation.activity.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Presentation.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Presentation.activity.NewTripActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Presentation.activity.TripMapActivity" android:screenOrientation="portrait">
        </activity>

        <!-- Configuration for Here API -->
        <!--
        Developers should put application credentials here.To obtain them, please register the application
        at https://developer.here.com/develop/mobile-sdks
        -->
        <meta-data
            android:name="com.here.android.maps.appid"
            android:value="@string/app_id"/>
        <meta-data
            android:name="com.here.android.maps.apptoken"
            android:value="@string/app_code"/>
        <meta-data
            android:name="com.here.android.maps.license.key"
            android:value="@string/license_key"/>

        <!-- Service -->
        <service
            android:name="com.here.android.mpa.service.MapService"
            android:exported="true"
            android:label="HereMapService"
            android:process="global.Here.Map.Service.v3">
            <intent-filter>
                <action android:name="com.here.android.mpa.service.MapService.v3">
                </action>
            </intent-filter>
        </service>

        <activity android:name=".Presentation.activity.BasicMapActivity" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>