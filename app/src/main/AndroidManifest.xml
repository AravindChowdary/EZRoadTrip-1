<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="easyroadtrip.com.ezroadtrip">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Presentation.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Presentation.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Presentation.activity.NewTripActivity">
        </activity>
        <activity android:name=".Presentation.activity.RouteSuggestionActivity">
        </activity>
    </application>

</manifest>